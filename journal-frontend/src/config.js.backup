// src/config.js

// The base URL for all API calls. 
// This is set to a relative path '/api'. 
// In production, NGINX will proxy requests from '/api' to the backend service.
// In development, the Webpack dev server proxy (in package.json) will do the same.
// For local development, we'll use the local backend directly
export const API_BASE_URL = process.env.NODE_ENV === 'development' 
  ? 'http://localhost:5000/api' 
  : '/api';

// Environment
export const ENV = process.env.NODE_ENV || 'development';

// Feature Flags
export const FEATURES = {
  ANALYTICS: true,
  TRADE_IMPORT: true,
  EXPORT: true,
};

// Local Storage Keys
export const STORAGE_KEYS = {
  AUTH_TOKEN: 'token',
  USER_DATA: 'userData',
  THEME: 'theme',
};

// Default Settings
export const DEFAULTS = {
  PAGE_SIZE: 10,
  DATE_FORMAT: 'yyyy-MM-dd',
  TIME_FORMAT: 'HH:mm',
};

// Production settings
export const PRODUCTION_CONFIG = {
  API_TIMEOUT: 30000, // 30 seconds
  RETRY_ATTEMPTS: 3,
  CACHE_DURATION: 5 * 60 * 1000, // 5 minutes
};

// Debug logging
if (ENV === 'development') {
  console.log('ðŸ”§ API Configuration:', {
    API_BASE_URL,
    ENV,
    hostname: window.location.hostname,
    protocol: window.location.protocol
  });
}
