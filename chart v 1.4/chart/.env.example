# Trading Chart - Environment Configuration
# Copy this file to .env and customize values

# Host Port (maps to container port 8000)
HOST_PORT=8000

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///./db/chart_data.db

# For PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@db:5432/trading_chart

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=*

# Debug mode (set to false in production)
DEBUG=false

# Auth
AUTH_ENABLED=true
SESSION_COOKIE_NAME=session_id
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_MAX_AGE_SECONDS=1209600

GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_WORKSHEET=Registrations
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=
GOOGLE_SERVICE_ACCOUNT_FILE=
